---
import CtaButton from '../ui/CtaButton.astro';

export interface Props {
  data: {
    title: string;
    subtitle: string;
  };
}

const { data } = Astro.props;
---

<div class="service-cta">
  <h2>{data.title}</h2>
  <p>{data.subtitle}</p>
  <CtaButton secondary />
</div>

<style>
  .service-cta {
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(15, 63, 143, 0.3) 0%,
      rgba(15, 63, 143, 0.1) 100%
    );
    padding: 50px 30px;
    border-radius: var(--radius);
    border: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease 0.5s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .service-cta h2 {
    font-size: 1.6rem;
    color: var(--color-white);
    margin-bottom: 15px;
    font-weight: 600;
  }

  .service-cta p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 25px;
    font-size: 1.05rem;
  }

  .cta-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    border-radius: 30px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-icon {
    width: 20px;
    height: 20px;
  }

  .cta-btn-primary {
    background: var(--color-primary);
    color: var(--color-white);
    border: 2px solid var(--color-primary);
  }

  .cta-btn-primary:hover {
    background: transparent;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(15, 63, 143, 0.3);
  }

  .cta-btn-secondary {
    background: transparent;
    color: var(--color-white);
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .cta-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-white);
    transform: translateY(-3px);
  }

  @media (max-width: 768px) {
    .service-cta {
      padding: 40px 25px;
    }

    .service-cta h2 {
      font-size: 1.4rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .service-cta {
      animation: simpleFadeIn 0.5s ease forwards;
      transform: none;
    }

    @keyframes simpleFadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  }
</style>
