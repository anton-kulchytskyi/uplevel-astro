---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import CtaButton from '@/components/ui/CtaButton.astro';

const allBackgrounds = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/{hero,services}/*.{jpg,png,jpeg,webp}',
  { eager: true }
);

const BACKGROUNDS: Record<string, ImageMetadata> = {};
for (const path in allBackgrounds) {
  const key = path.split('/').pop()?.split('.')[0] ?? '';
  BACKGROUNDS[key] = allBackgrounds[path].default;
}

export interface Props {
  data: {
    title: string;
    subtitle?: string;
    backgroundImage?: string | null;
    showCta?: boolean;
  };
}

const { data } = Astro.props;
const backgroundImage = data.backgroundImage
  ? BACKGROUNDS[data.backgroundImage]
  : null;

const hasBackground = !!backgroundImage;
const showCta = data.showCta ?? true;
---

<section class:list={['hero', { 'hero--no-background': !hasBackground }]}>
  {
    backgroundImage && (
      <Image
        src={backgroundImage}
        alt={data.title.replace(/<[^>]*>/g, '')}
        class="hero-background"
        loading="eager"
        quality={85}
      />
    )
  }

  <div class="hero-content">
    <h1 set:html={data.title} />
    {data.subtitle && <p>{data.subtitle}</p>}
    {showCta && <CtaButton />}
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--color-white);
    border-radius: var(--radius);
    margin-bottom: 2rem;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    opacity: 0;
    transform: translateX(-100%) scale(1.1);
    animation: slideInBackground 1.4s cubic-bezier(0.165, 0.84, 0.44, 1)
      forwards;
  }

  @keyframes slideInBackground {
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(15, 63, 143, 0.7) 0%,
      rgba(43, 43, 43, 0.6) 100%
    );
    z-index: 1;
    opacity: 0;
    animation: fadeInOverlay 0.8s ease 0.6s forwards;
  }

  @keyframes fadeInOverlay {
    to {
      opacity: 1;
    }
  }

  .hero--no-background {
    min-height: 20vh;
    padding: 40px;
    margin-bottom: 40px;
  }

  .hero--no-background::before {
    display: none;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    opacity: 0;
    transform: translateX(100px);
    animation: slideInContent 1s cubic-bezier(0.165, 0.84, 0.44, 1) 0.8s
      forwards;
  }

  @keyframes slideInContent {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .hero--no-background .hero-content {
    transform: translateX(-50px);
    animation: slideInContentLeft 0.8s cubic-bezier(0.165, 0.84, 0.44, 1) 0.4s
      forwards;
  }

  @keyframes slideInContentLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .hero--no-background .hero-content {
    color: var(--color-text);
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease 1s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero--no-background h1 {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    animation-delay: 0.6s;
  }

  .hero p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    opacity: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease 1.2s forwards;
  }

  .hero--no-background p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    font-style: italic;
    text-shadow: none;
    animation-delay: 0.8s;
  }

  .hero-content :global(.cta-button) {
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    animation: fadeInUpScale 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) 1.4s
      forwards;
  }

  .hero--no-background .hero-content :global(.cta-button) {
    animation-delay: 1s;
  }

  @keyframes fadeInUpScale {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 60vh;
      margin-bottom: 1.5rem;
    }

    .hero--no-background {
      min-height: 25vh;
      padding: 30px;
      margin-bottom: 30px;
    }

    .hero-content {
      padding: 1.5rem;
    }

    .hero h1 {
      font-size: 2.2rem;
    }

    .hero p {
      font-size: 1rem;
    }

    .hero-background,
    .hero-content,
    .hero h1,
    .hero p,
    .hero-content :global(.cta-button) {
      animation-duration: 0.6s;
    }

    .hero--no-background {
      animation-duration: 0.5s;
    }
  }

  @media (max-width: 480px) {
    .hero {
      min-height: 50vh;
    }

    .hero--no-background {
      min-height: 20vh;
      padding: 20px;
    }

    .hero h1 {
      font-size: 1.8rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-background,
    .hero-content,
    .hero h1,
    .hero p,
    .hero-content :global(.cta-button),
    .hero--no-background {
      animation: simpleFadeIn 0.5s ease forwards;
      transform: none;
    }

    @keyframes simpleFadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  }
</style>
