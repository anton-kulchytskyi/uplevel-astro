---
export interface Props {
  paragraphs: string[];
}

const { paragraphs } = Astro.props;
---

<section class="main-story">
  <div class="story-card">
    <div class="story-content">
      {
        paragraphs.map((paragraph, index) => (
          <p class="story-paragraph" style={`--delay: ${index * 0.2}s`}>
            {paragraph}
          </p>
        ))
      }
    </div>
  </div>
</section>

<style>
  .main-story {
    margin: 2rem 4rem;
  }

  .story-card {
    position: relative;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: var(--radius);
    padding: 40px;
    margin-bottom: 40px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
    overflow: hidden;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .story-card {
    animation: slideUp 0.8s cubic-bezier(0.165, 0.84, 0.44, 1) 0.3s forwards;
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .story-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.05),
      transparent
    );
    transition: left 0.8s;
    z-index: 0;
  }

  .story-card:hover::before {
    left: 100%;
  }

  .story-card:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
  }

  .story-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .story-paragraph {
    font-size: 1.1rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.5rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInSlide 0.6s ease forwards;
    animation-delay: var(--delay);
  }

  .story-paragraph:last-child {
    margin-bottom: 0;
  }

  @keyframes fadeInSlide {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .main-story {
      margin: 1rem;
    }
    .story-card {
      padding: 30px 20px;
      margin-bottom: 30px;
    }

    .story-paragraph {
      font-size: 1.05rem;
      margin-bottom: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .story-card {
      padding: 25px 15px;
    }

    .story-paragraph {
      font-size: 1rem;
      line-height: 1.7;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .story-card,
    .story-paragraph {
      animation: simpleFadeIn 0.5s ease forwards;
      transform: none;
    }

    .story-card::before {
      transition: none;
    }

    @keyframes simpleFadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  }
</style>
