---
// src/components/sections/ServiceProcess.astro

export interface Props {
  data: {
    title: string;
    steps: Array<{
      title: string;
      description: string;
    }>;
  };
}

const { data } = Astro.props;
---

<div class="service-process">
  <h2>{data.title}</h2>
  <div class="process-steps">
    {
      data.steps.map((step, index) => (
        <div class="process-step" style={`--delay: ${index * 0.1}s`}>
          <div class="step-number">{index + 1}</div>
          <div class="step-content">
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .service-process {
    margin-bottom: 60px;
  }

  .service-process h2 {
    text-align: center;
    font-size: 1.8rem;
    color: var(--color-white);
    margin-bottom: 40px;
    font-weight: 600;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease 0.3s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .process-step {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    background: rgba(255, 255, 255, 0.05);
    padding: 25px;
    border-radius: var(--radius);
    border-left: 4px solid var(--color-primary);
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateX(-20px);
    animation: slideInLeft 0.6s ease forwards;
    animation-delay: var(--delay);
  }

  @keyframes slideInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .process-step:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateX(5px);
  }

  .step-number {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .step-content h3 {
    font-size: 1.1rem;
    color: var(--color-white);
    margin-bottom: 8px;
    font-weight: 600;
  }

  .step-content p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.5;
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .service-process {
      margin-bottom: 40px;
    }

    .service-process h2 {
      font-size: 1.5rem;
      margin-bottom: 30px;
    }

    .process-step {
      flex-direction: column;
      text-align: center;
      padding: 20px;
    }

    .step-number {
      margin: 0 auto;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .service-process h2,
    .process-step {
      animation: simpleFadeIn 0.5s ease forwards;
      transform: none;
    }

    @keyframes simpleFadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  }
</style>
