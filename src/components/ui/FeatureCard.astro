---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

export interface Props {
  title: string;
  description: string;
  icon: string;
  backgroundImage: string;
}

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/images/features/*.{jpg,png,jpeg,webp}',
  { eager: true }
);

const IMAGES: Record<string, ImageMetadata> = {};
for (const path in images) {
  const key = path.split('/').pop()?.split('.')[0] ?? '';
  IMAGES[key] = images[path].default;
}

const { title, description, icon, backgroundImage } = Astro.props;
const bgImg = backgroundImage ? IMAGES[backgroundImage] : null;
---

<div class="feature-card">
  {
    bgImg && (
      <Image
        src={bgImg}
        alt={title}
        class="feature-background"
        loading="lazy"
        quality={80}
      />
    )
  }
  <div class="feature-content">
    <div class="feature-icon">{icon}</div>
    <h3 class="feature-title">{title}</h3>
    <p class="feature-description">{description}</p>
  </div>
</div>

<style>
  .feature-card {
    backdrop-filter: blur(10px);
    border-radius: var(--radius);
    padding: 40px 30px;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .feature-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    transition: all 1.2s cubic-bezier(0.165, 0.84, 0.44, 1);
    transform: scale(1) translate(0, 0);
    filter: brightness(1);
  }

  .feature-card:hover .feature-background {
    transform: scale(1.2) translate(-5%, -5%);
    filter: brightness(0.8);
  }

  .feature-content {
    position: relative;
    z-index: 3;
    transition: all 0.5s ease;
    opacity: 1;
  }

  .feature-card:hover .feature-content {
    opacity: 1;
    transform: translateY(-5px);
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(15, 63, 143, 0.85) 0%,
      rgba(43, 43, 43, 0.8) 100%
    );
    z-index: 1;
    transition: opacity 0.4s ease;
  }

  .feature-card:hover::before {
    opacity: 0.9;
  }

  .feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 25px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(1.1) rotate(360deg);
  }

  .feature-title {
    font-size: 1.4rem;
    color: var(--color-white);
    margin-bottom: 15px;
    font-weight: 600;
  }

  .feature-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  @media (max-width: 768px) {
    .feature-card {
      padding: 30px 20px;
    }
  }

  .feature-card:nth-child(1) {
    animation-delay: 0.1s;
  }
  .feature-card:nth-child(2) {
    animation-delay: 0.2s;
  }
  .feature-card:nth-child(3) {
    animation-delay: 0.3s;
  }
  .feature-card:nth-child(4) {
    animation-delay: 0.4s;
  }
  .feature-card:nth-child(5) {
    animation-delay: 0.5s;
  }
  .feature-card:nth-child(6) {
    animation-delay: 0.6s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
