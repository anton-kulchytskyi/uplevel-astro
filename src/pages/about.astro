---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '@/components/sections/Hero.astro';
import MainStory from '@/components/sections/MainStory.astro';
import ValuesSection from '@/components/sections/ValuesSection.astro';
import LocationSection from '@/components/sections/LocationSection.astro';
import CtaSection from '@/components/sections/CtaSection.astro';
import SectionDivider from '@/components/ui/SectionDivider.astro';
import pageContent from '@/data/about.json';
---

<BaseLayout seoData={pageContent.seo}>
  <Hero data={pageContent.hero} />
  <MainStory paragraphs={pageContent.mainStory} />
  <ValuesSection data={pageContent.values} />
  <SectionDivider />

  <LocationSection data={pageContent.location} />

  <SectionDivider />

  <CtaSection data={pageContent.cta} />
</BaseLayout>
