---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '@/components/sections/shared/Hero.astro';
import MainStory from '@/components/sections/about/MainStory.astro';
import ValuesSection from '@/components/sections/about/ValuesSection.astro';
import LocationSection from '@/components/sections/about/LocationSection.astro';
import AboutCta from '@/components/sections/about/AboutCta.astro';
import SectionDivider from '@/components/ui/SectionDivider.astro';
import pageContent from '@/data/about.json';
---

<BaseLayout seoData={pageContent.seo}>
  <Hero data={pageContent.hero} />
  <MainStory paragraphs={pageContent.mainStory} />
  <ValuesSection data={pageContent.values} />
  <SectionDivider />
  <LocationSection data={pageContent.location} />
  <SectionDivider />
  <AboutCta data={pageContent.cta} />
</BaseLayout>
