---
import '@fontsource/inter/300.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';

import { slide } from 'astro:transitions';

import Header from '@/components/layout/Header.astro';
import MobileMenu from '@/components/layout/MobileMenu.astro';
import EmergencyBanner from '../components/layout/EmergencyBanner.astro';
import ToggleButton from '@/components/layout/ToggleButton.astro';
import Breadcrumbs from '@/components/layout/Breadcrumbs.astro';
import Footer from '@/components/layout/Footer.astro';

export interface SeoData {
  title: string;
  description: string;
  keywords: string;
  ogTitle?: string;
  ogDescription?: string;
  ogType?: string;
  ogUrl?: string;
  ogImage?: string;
}

export interface Props {
  seoData: SeoData;
  showBreadcrumbs?: boolean;
}

const { seoData, showBreadcrumbs = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{seoData.title}</title>
    <meta name="description" content={seoData.description} />
    <meta name="keywords" content={seoData.keywords} />
    <meta property="og:title" content={seoData.ogTitle ?? seoData.title} />
    <meta
      property="og:description"
      content={seoData.ogDescription ?? seoData.description}
    />
    <meta property="og:type" content={seoData.ogType ?? 'website'} />
    <meta
      property="og:url"
      content={seoData.ogUrl ?? `https://uplevelcorp.ca${Astro.url.pathname}`}
    />
    <meta
      property="og:image"
      content={seoData.ogImage ?? 'https://uplevelcorp.ca/og-cover.png'}
    />

    <meta
      name="apple-mobile-web-app-title"
      content="Uplevel Restoration - 24/7"
    />

    <link
      rel="canonical"
      href={seoData.ogUrl ?? `https://uplevelcorp.ca${Astro.url.pathname}`}
    />

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <style is:inline>
      :root {
        --color-primary: #0f3f8f;
        --color-dark: #2b2b2b;
        --color-white: #fafbff;
        --color-light-gray: #808080;
        --spacing: 1rem;
        --spacing-mobile: 0.5rem;
        --radius: 1rem;
        color-scheme: light;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: 'Inter', 'Arial', sans-serif;
        background: linear-gradient(
          135deg,
          var(--color-primary) 0%,
          var(--color-dark) 100%
        );
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      main {
        margin: 2rem var(--spacing);
        flex: 1;
      }

      @keyframes slide-from-bottom {
        from {
          transform: translateY(100%);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes slide-to-top {
        from {
          transform: translateY(0);
          opacity: 1;
        }
        to {
          transform: translateY(-100%);
          opacity: 0;
        }
      }

      ::view-transition-old(root) {
        animation: slide-to-top 4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      ::view-transition-new(root) {
        animation: slide-from-bottom 4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      ::view-transition-old(header),
      ::view-transition-new(header),
      ::view-transition-old(footer),
      ::view-transition-new(footer) {
        animation: none;
      }

      @media (prefers-reduced-motion: reduce) {
        ::view-transition-old(root),
        ::view-transition-new(root) {
          animation: fade 0.2s ease-in-out;
        }

        @keyframes fade {
          from {
            opacity: 0;
          }
          to {
            opacity: 1;
          }
        }
      }
    </style>
  </head>
  <body>
    <div transition:persist="header">
      <ToggleButton />
      <MobileMenu />
      <Header />
    </div>
    <EmergencyBanner />

    {showBreadcrumbs && <Breadcrumbs />}

    <main transition:animate={slide({ duration: '0.4s' })}>
      <slot />
    </main>
    <div transition:persist="footer">
      <Footer />
    </div>
  </body>
</html>
